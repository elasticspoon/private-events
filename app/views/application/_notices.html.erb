<% if flash[:notice] %>
  <div class="flex p-1 text-green-900">
    <div class="shadow-sm flex w-full rounded-md bg-green-50 border-[1px] border-gray-100">
      <div class="w-2 bg-green-700 relative left rounded-l-md"></div>
      <div class="px-5 flex items-center">
        <div class="pr-4 py-2">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path class="alert-chunky_svg__eds-icon--alert-chunky_base" fill-rule="evenodd" clip-rule="evenodd" d="M12 18c-3.3 0-6-2.7-6-6s2.7-6 6-6 6 2.7 6 6-2.7 6-6 6zm0-14c-4.4 0-8 3.6-8 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8z"></path><path class="alert-chunky_svg__eds-icon--alert-chunky_dot" fill-rule="evenodd" clip-rule="evenodd" d="M11 14h2v2h-2z"></path><path class="alert-chunky_svg__eds-icon--alert-chunky_line" fill-rule="evenodd" clip-rule="evenodd" d="M11 8h2v5h-2z"></path>
          </svg>
        </div>
        <div class="py-3 text-[13px]">
          <strong class="font-semibold ">
            <%= format_flash_message(notice) %>
          </strong>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% if flash[:alert] && flash[:alert] == 'Not implemented.' %>
  <%= render 'notices_not_implemented' %>
<% elsif flash[:alert] %>
  <% [flash[:alert]].flatten.each do |alert| %>
    <div class="flex p-1 text-red-900">
      <div class="shadow-sm flex w-full rounded-md bg-red-50 border-[1px] border-gray-100">
        <div class="w-2 bg-red-700 relative left rounded-l-md"></div>
        <div class="px-5 flex items-center">
          <div class="pr-4 py-2">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path class="alert-chunky_svg__eds-icon--alert-chunky_base" fill-rule="evenodd" clip-rule="evenodd" d="M12 18c-3.3 0-6-2.7-6-6s2.7-6 6-6 6 2.7 6 6-2.7 6-6 6zm0-14c-4.4 0-8 3.6-8 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8z"></path><path class="alert-chunky_svg__eds-icon--alert-chunky_dot" fill-rule="evenodd" clip-rule="evenodd" d="M11 14h2v2h-2z"></path><path class="alert-chunky_svg__eds-icon--alert-chunky_line" fill-rule="evenodd" clip-rule="evenodd" d="M11 8h2v5h-2z"></path>
            </svg>
          </div>
          <div class="py-3 text-[13px]">
            <strong class="font-semibold ">
              <%= format_flash_message(alert) %>
            </strong>
          </div>
        </div>
      </div>
    </div>
  <% end%>
<% end %>
