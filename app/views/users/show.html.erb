<div class="bg-white flex flex-col h-full py-10 px-24">
  <div class="">
    <%= render @user %>
  </div>
  <div class="flex flex-col py-4 w-full">
    <div class="flex flex-col w-full">
      <div class="text-xl font-extrabold p-2">User Created Events:</div>
      <div class="grid grid-cols-3 justify-items-center gap-y-8">
        <%= render @user.events_created %>
      </div>
    </div>
    <div class="flex flex-col w-full">
      <div class="text-xl font-extrabold p-2">Attending Events:</div>
      <div class="grid grid-cols-3 justify-items-center gap-y-8">
        <% @user.events_attended.each do |attended| %>
          <%= render partial: attended, locals: { render_create: false } %>
        <% end %>
      </div>
    </div>
    <div class="flex flex-col w-full">
      <div class="text-xl font-extrabold p-2">Invited to Events:</div>
      <div class="grid grid-cols-3 justify-items-center">
        <% @user.events_pending.each do |pending| %>
          <%= render partial: pending, locals: { render_delete: false } %>
        <% end %>
      </div>
    </div>
  </div>
  <div class=""><%= render 'events/event_bottom_bar' %></div>
</div>
