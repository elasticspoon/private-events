<div class="flex flex-col bg-[#f8f7fa] w-full h-full">
  <div class="flex flex-col text-sm font-normal text-[#6f7287] relative" x-data="{open_submenu: false}">
    <button class="flex px-5 py-4 justify-between items-center hover:text-black" @click="open_submenu = ! open_submenu">
      <span class="font-semibold">Account</span>
      <%= render 'navbar/chevron_svg' %>
    </button>
    <ul class="relative flex flex-col [&>*]:min-h-[53px] [&>*:hover]:text-black [&>*]:w-72 [&>*]:py-4 [&>*]:pr-5 [&>*]:pl-9"
      x-show="open_submenu" x-cloak>
      <li>Contact Info</li>
      <li>Password</li>
      <li>Credit/Debit Cards</li>
      <li>Email Preferences</li>
      <li>Linked Accounts</li>
      <li>Close Account</li>
      <li>Personal Data</li>
    </ul>
  </div>
  <div class="flex flex-col text-sm font-normal text-[#6f7287] relative" x-data="{open_submenu: false}">
    <button class="flex px-5 py-4 justify-between items-center hover:text-black" @click="open_submenu = ! open_submenu">
      <span class="font-semibold">Developer Links</span>
      <%= render 'navbar/chevron_svg' %>
    </button>
    <ul class="relative flex flex-col [&>*]:min-h-[53px] [&>*:hover]:text-black [&>*]:w-72 [&>*]:py-4 [&>*]:pr-5 [&>*]:pl-9"
      x-show="open_submenu" x-cloak>
      <li>API Keys</li>
    </ul>
  </div>
</div>
