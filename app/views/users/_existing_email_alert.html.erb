<% if resource.errors[:email]&.any? && resource.errors.clear %>
  <div class="flex rounded shadow-xl mb-3">
    <div class="w-1 bg-orange-500 relative left-0"></div>
    <div class="px-5 flex items-center">
      <div class="pr-4 py-2">
        <svg class="w-6 h-6" viewBox="0 0 24 24">
          <path class="alert-chunky_svg__eds-icon--alert-chunky_base" fill-rule="evenodd" clip-rule="evenodd" d="M12 18c-3.3 0-6-2.7-6-6s2.7-6 6-6 6 2.7 6 6-2.7 6-6 6zm0-14c-4.4 0-8 3.6-8 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8z"></path><path class="alert-chunky_svg__eds-icon--alert-chunky_dot" fill-rule="evenodd" clip-rule="evenodd" d="M11 14h2v2h-2z"></path><path class="alert-chunky_svg__eds-icon--alert-chunky_line" fill-rule="evenodd" clip-rule="evenodd" d="M11 8h2v5h-2z"></path>
        </svg>
      </div>
      <div class="py-3 text-[13px]">
        <strong class="font-semibold ">
          There is an account associated with the email.
        </strong>
        <%= link_to "Log in", new_user_session_path, class: 'text-[#3d64ff] hover:underline font-normal' %>
      </div>
    </div>
  </div>
<% end %>
