<% content_for :page_title do %>
  <div class="flex items-center justify-between">
    <span class="text-3xl">Create an account</span>
    <span class="text-sm font-semibold text-[#3d64ff] hover:underline"><%= link_to  'Log in', new_user_session_path %></span>
  </div>
<% end %>
<% content_for :page_form do %>
  <%= form_for(resource, url: '/users', data: { turbo: false}, method: :post) do |form| %>
    <div class="flex flex-col">
      <div class="flex items-center justify-between mb-2 border-[1px] border-[#dbdae3] bg-[#f8f7fa]">
        <div class=" flex flex-col font-normal h-[48px] rounded-sm" >
          <%= form.label :email, value: 'Email address', class: 'absolute px-3 pt-[2px] text-xs text-[#6f7287]' %>
          <%= form.email_field :email, autocomplete: 'email', class: 'border-none px-3 pt-[18px] pb-[6px] text-sm bg-[#f8f7fa]' %>
        </div>
        <%= render 'devise/registrations/edit_email_button' %>
      </div>
      <div class="mb-2 border-[1px] border-[#dbdae3] flex flex-col font-normal h-[48px] rounded-sm relative " >
        <%= form.password_field :password, class: 'border-transparent border-[1px] px-3 focus:border-none focus:pt-5 text-sm placeholder:text-sm focus:placeholder:text-transparent peer', placeholder: 'Password' %>
        <%= form.label :password, value: 'Password', class: 'absolute px-3 pt-[2px] text-xs text-[#6f7287] hidden peer-focus:block' %>
      </div>
      <div class="grid grid-cols-2 gap-x-4">
        <div class="mb-2 border-[1px] border-[#dbdae3] flex flex-col font-normal h-[48px] rounded-sm relative " >
          <%= form.text_field :name, class: 'border-transparent border-[1px] px-3 focus:border-none focus:pt-5 text-sm placeholder:text-sm focus:placeholder:text-transparent peer', placeholder: 'Name' %>
          <%= form.label :name, value: 'Name', class: 'absolute px-3 pt-[2px] text-xs text-[#6f7287] hidden peer-focus:block' %>
        </div>
        <div class="mb-2 border-[1px] border-[#dbdae3] flex flex-col font-normal h-[48px] rounded-sm relative " >
          <%= form.text_field :username, class: 'border-transparent border-[1px] px-3 focus:border-none focus:pt-5 text-sm placeholder:text-sm focus:placeholder:text-transparent peer', placeholder: 'Username' %>
          <%= form.label :username, value: 'Username', class: 'absolute px-3 pt-[2px] text-xs text-[#6f7287] hidden peer-focus:block' %>
        </div>
      </div>
      <div class="mb-2 border-[1px] border-[#dbdae3] flex flex-col font-normal h-[48px] rounded-sm relative  ">
        <%= form.password_field :password_confirmation, placeholder: 'Confirm password', class: 'border-transparent border-[1px] px-3 focus:border-none focus:pt-5 text-sm placeholder:text-sm focus:placeholder:text-transparent peer' %>
        <%= form.label :password_confirmation, class: 'absolute px-3 pt-[2px] text-xs text-[#6f7287] hidden peer-focus:block' %>
      </div>
      <div class="flex flex-col mt-4 mb-8">
        <div class="bg-gray-100 h-1 w-full"></div>
        <span class="pt-2 font-normal text-[13px]">Your password must be at least 8 characters</span>
      </div>
      <div class="bg-[#d1410c] w-full flex items-center justify-center min-h-[44px] rounded cursor-pointer ">
        <%= form.submit 'Create account', class: 'font-semibold text-sm text-white' %>
      </div>
    </div>
  <% end %>
<% end %>
