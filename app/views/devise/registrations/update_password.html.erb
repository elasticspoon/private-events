<div class="flex lg:flex-row flex-col grow">
  <div class="hidden lg:flex max-w-[288px] w-full"><%= render 'users/sidebar' %></div>
  <%= render 'side_nav_bar', current_page: 'Update Password' %>
  <div class="flex w-full items-center self-start mb-5">
    <div class="w-full flex flex-col px-12 max-w-7xl mt-10">
      <h1 class="font-bold text-3xl">Your Password</h1>
      <div class="w-full py-[10px]"><hr></div>
      <div class="flex w-1/3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
         data: {turbo: false}, method: :put) do |form|%>
          <div class="mt-2 border-[1px] border-[#dbdae3] flex flex-col font-normal h-[48px] rounded-sm relative justify-center" >
            <%= form.password_field :password, placeholder: 'New Password', class: 'border-transparent border-[1px] px-3 focus:border-none focus:pt-5 text-sm placeholder:text-sm focus:placeholder:text-transparent peer'%>
            <%= form.label :password, value: 'New Password', class: 'absolute px-3 pt-[2px] text-xs text-[#6f7287] hidden peer-focus:block top-0' %>
          </div>
          <%= render 'inline_errors', errors: resource.errors[:password_confirmation] %>
          <div class="mt-2 border-[1px] border-[#dbdae3] flex flex-col font-normal h-[48px] rounded-sm relative justify-center ">
            <%= form.password_field :password_confirmation, placeholder: 'Repeat Password', class: 'border-transparent border-[1px] px-3 focus:border-none focus:pt-5 text-sm placeholder:text-sm focus:placeholder:text-transparent peer' %>
            <%= form.label :password_confirmation, value: 'Repeat Password', class: 'absolute px-3 pt-[2px] text-xs text-[#6f7287] hidden peer-focus:block top-0' %>
          </div>
          <div class="flex flex-col mt-6 mb-8">
            <div class="bg-gray-100 h-1 w-full"></div>
            <span class="pt-2 font-normal text-[13px]">Your password must be at least 8 characters</span>
          </div>
          <%= render 'inline_errors', errors: resource.errors[:password_confirmation] %>
          <div class="bg-[#d1410c] w-fit px-8 flex items-center justify-center min-h-[44px] rounded cursor-pointer mt-6">
            <%= form.submit 'Save', class: 'font-semibold text-sm text-white' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
