<div class="flex lg:flex-row flex-col pb-5 grow">
  <div class="flex w-full items-center self-start mb-5">
    <div class="w-full flex flex-col px-12 max-w-7xl mt-10">
      <span class="text-right font-normal text-[15px] text-[#39364f]">
        <%= resource.created_at.strftime("Eventbrite account since %b %-d, %Y") %>
      </span>
      <h1 class="font-bold text-3xl">Account Information</h1>
      <div class="w-full py-[10px]"><hr></div>
      <div class="flex flex-col md:w-2/3">
        <%= render 'update_email', resource: resource %>
        <%= render 'update_photo', resource: resource %>
        <%= render 'update_contact_info', resource: resource %>
        <%= render partial: 'address_form', locals: {resource:, address: 'Home Address'}  %>
        <%= render partial: 'address_form', locals: {resource:, address: 'Billing Address'}  %>
        <%= render partial: 'address_form', locals: {resource:, address: 'Shipping Address'}  %>
        <%= render partial: 'address_form', locals: {resource:, address: 'Work Address'}  %>
      </div>
    </div>
  </div>
</div>
<% content_for :footer do %>
  <%= render 'footer/footer_short' %>
<% end %>
<% content_for :side_bar do %>
  <div class="hidden lg:flex max-w-[288px] w-full"><%= render 'users/sidebar' %></div>
<% end %>
<% content_for :nav_bar do %>
  <%= render 'navbar/navbar' %>
  <%= render 'side_nav_bar', current_page: 'Account Information' %>
<% end %>
