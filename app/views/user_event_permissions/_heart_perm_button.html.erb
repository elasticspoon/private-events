<% unless resource.past? || current_user&.attending?(resource.id) %>
  <div class="absolute bottom-[-22px] right-3">
    <%= render layout: 'layouts/generic_attend_perm_button', locals: { resource: resource, method: :post } do |form| %>
      <%= form.button do %>
        <div class="rounded-full border-[1px] border-[#dbdae3]  bg-white hover:bg-[#f8f7fa] p-2 text-[#4b4d63]">
          <%= inline_svg_tag 'svg/heart', class: 'h-6 w-6' %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
