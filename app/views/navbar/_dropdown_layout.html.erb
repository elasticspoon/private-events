<div class="group flex-col h-full justify-center items-center relative" x-data="{dropdown: false}">
  <div class="h-full w-full flex flex-row justify-center items-center px-3 lg:px-5 hover:bg-gray-100
  <%= local_assigns[:is_event_view] ? 'text-[#6f7287] hover:text-[#39364f]' : 'text-[#39364f] ' %>" @click="dropdown = ! dropdown">
    <%= content_for :picture %>
    <%= content_for :label %>
    <div class="hidden lg:block ml-1">
      <%= render 'navbar/chevron_svg' %>
    </div>
  </div>
  <ul class="absolute min-w-[250px] right-0 self-end bg-white text-sm font-normal shadow-sm
  [&>*]:text-gray-500 [&>*]:px-5 [&>*]:py-4 [&>*:hover]:cursor-pointer  [&>*:hover]:text-gray-800 [&>*:hover]:bg-gray-100
    <%= local_assigns[:is_event_view] ? 'top-[60px]' : 'top-[72px]'  %>" x-show="dropdown" x-cloak @click.outside="dropdown=false">
    <%= content_for :list %>
  </ul>
</div>
