<% set_content_for :radio_buttons do %>
  <div class="flex text-sm font-normal [&>*]:mr-4 [&>*]:flex-grow mb-1 w-full">
    <div x-bind="radio_option('public')"
    :class="{ 'text-[#3659e3] bg-[#eaeefc] border-[#3659e3]': isSelected(option) }"
    class="flex justify-center cursor-pointer rounded border-[1px] border-[#dbdae3]" >
      <%= form.radio_button :attendee_privacy, 'public', class: 'peer sr-only' %>
      <%= form.label :attendee_privacy, 'Public', value: 'public',
        class: 'flex justify-center px-2 py-3' do %>
        <span>Public</span>
      <% end %>
    </div>
    <div x-bind="radio_option('protected')"
    :class="{ 'text-[#3659e3] bg-[#eaeefc] border-[#3659e3]': isSelected(option) }"
    class="flex justify-center cursor-pointer rounded border-[1px] border-[#dbdae3]">
      <%= form.radio_button :attendee_privacy, 'protected', class: 'peer sr-only' %>
      <%= form.label :attendee_privacy, 'Protected', value: 'protected',
        class: 'flex justify-center px-2 py-3' do %>
        <span>Protected</span>
      <% end %>
    </div>
    <div x-bind="radio_option('private')"
    :class="{ 'text-[#3659e3] bg-[#eaeefc] border-[#3659e3]': isSelected(option) }"
    class="flex justify-center cursor-pointer rounded border-[1px] border-[#dbdae3]">
      <%= form.radio_button :attendee_privacy, 'private', class: 'peer sr-only' %>
      <%= form.label :attendee_privacy, 'Private', value: 'private',
        class: 'flex justify-center px-2 py-3' do %>
        <span>Private</span>
      <% end %>
    </div>
  </div>
<% end %>
<% set_content_for :descriptions do %>
  <p class="font-normal text-sm break-normal leading-6" x-show="isSelected('public')">
    Any user will be able to see the other users attending your event. 
  </p>
  <p class="font-normal text-sm break-normal leading-6" x-show="isSelected('protected')" >
    Any Eventbrite member will be able to see the other users attending your event.
  </p>
  <p class="font-normal text-sm break-normal leading-6" x-show="isSelected('private')">
    Only users invited to the event will be able to see the other users attending your event.
  </p>
<% end %>
<span :id="$id('radio-option-description')" class="mt-2 text-sm">
  A Ruby framework built by DHH
</span>
