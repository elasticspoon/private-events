<div class="h-full flex flex-col">
  <%= render 'header_image'%>
  <div class="flex flex-col max-w-7xl px-4 items-center">
    <%= render 'nonfunctional/location_search_form' %>
    <%= render 'nonfunctional/event_filters' %>
    <%= render 'nonfunctional/event_categories' %>
    <div class="flex flex-col py-10">
      <div class="text-black font-bold text-2xl px-3 pb-6">Events in Four Corners</div>
      <div class="grid grid-cols-1  sm:grid-cols-2  md:grid-cols-3 xl:grid-cols-4 justify-center items-center">
        <% @events.future.limit(2).each do |event| %>
          <%= render_event_rand_size(event) %>
        <% end %>
        <%= render 'nonfunctional/event_card_filler' %>
      </div>
    </div>
    <div class="bg-[#f8f7fa] max-w-full">
      <%= render 'nonfunctional/personal_filters' %>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 grid-rows-2 justify-items-center">
      <% @events.future.limit(8).each do |event| %>
        <%= render_event_rand_size(event) %>
      <% end %>
    </div>
    <div class="bg-[#f8f7fa] max-w-full">
      <%= render 'nonfunctional/collections' %>
    </div>
    <div class="flex flex-col pt-10">
      <div class="text-black font-bold text-2xl px-3 mb-6">More Events</div>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 justify-items-center">
        <% @events.future.limit(12).each do |event| %>
          <%= render_event_rand_size(event) %>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'nonfunctional/see_more' %>
  <%= render 'bottom_bar' %>
</div>
