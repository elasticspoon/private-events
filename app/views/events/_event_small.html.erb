<% if event_small.viewable_by?(current_user) %>
  <div class="p-4 h-full">
    <div class="flex flex-row h-full">
      <div class="w-full flex flex-col pb-3 pr-4">
        <div class="font-bold text-xl overflow-hidden"><%= event_small.name.titleize %></div>
        <div class="text-[#d1410c] font-semibold text-base pb-1 pt-2"><%= event_small.date.strftime("%a, %b %e, %I:%M %p") %></div>
        <div class="text-base font-normal text-[#6f7287]"><%= event_small.location.titleize %> - <%= event_small.location.titleize %></div>
        <div class="text-base font-normal text-[#6f7287] mt-1"><%= event_small.price %></div>
        <div class="pt-1">
          <%= render "users/short_user_alt", resource: event_small.creator %>
        </div>
      </div>
      <div class="flex flex-col h-full justify-between">
        <div class="flex flex-row w-56">
          <%= image_tag "https://img.evbuc.com/https%3A%2F%2Fcdn.evbuc.com%2Fimages%2F232537269%2F213108451434%2F1%2Foriginal.20220218-133834?w=512&auto=format%2Ccompress&q=75&sharp=10&rect=0%2C4%2C1200%2C600&s=44bbb722accd785fe8a02da5a71666a4" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
