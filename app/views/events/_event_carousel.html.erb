<% set_content_for :carousel_title do %>
  <span class="font-bold text-2xl mb-8">Other events you may like</span>
<% end %>
<% set_content_for :left_arrow do %>
  <button class="p-3 mr-2 disabled:text-[#39364f] disabled:bg-[#a9a8b3] text-white bg-[#39364f]">
    <%= inline_svg_tag 'svg/arrow_right', class:'w-4 h-4 rotate-180' %>
  </button>
<% end %>
<% set_content_for :right_arrow do %>
  <button class="p-3 disabled:text-[#39364f] disabled:bg-[#a9a8b3] text-white bg-[#39364f]">
    <%= inline_svg_tag 'svg/arrow_right', class:'w-4 h-4' %>
  </button>
<% end %>
<% Event.includes(:creator).limit(5).each do |c_event| %>
  <li class="w-full md:w-1/3 md:p-1 shrink-0 snap-start"><%= render partial: c_event, locals: {is_event_view: true} %></li>
<% end %>
