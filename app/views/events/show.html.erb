<div>
  <h1 class="font-bold text-4xl">Events#show</h1>
  <div class="">Creator <%= @event.creator.email %></div>
  <div class="">Location <%= @event.location %></div>
  <div class="">Time <%= @event.date %></div>
  <div class=""><%= link_to 'Edit Event', [:edit, @event] %></div>
  <div class=""><%= button_to 'Delete Event', @event, method: :delete %></div>
  <div class="flex flex-row">
    <div class=""><%= render 'attended_events/create_button', resource: @event %></div>
    <div class=""><%= render 'attended_events/delete_button', resource: @event %></div>
  </div>
  <div class="">Attendees:</div>
  <% @event.attendees.each do |attendee| %>
    <%= attendee.name %>
  <% end %>
</div>
