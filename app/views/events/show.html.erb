<div class="bg-white flex flex-col">
  <%= render partial: 'full_event', locals: { event: @event } %>
  <%= render partial: 'event_invite_sticky_bar', locals: { event: @event } %>
  <div class="px-16">
    <div class="flex flex-row">
      <div class="flex flex-col max-w-screen-lg w-full px-16 py-8">
        <div class="font-extrabold text-3xl"><%= @event.name.titleize %></div>
        <div class="font-extrabold mt-8">About this event</div>
        <%= render 'event_placeholder_text' %>
      </div>
      <div class="px-8 mx-8 min-w-max">
        <div class="py-16">
          <div class="font-extrabold">Date and Time</div>
          <div class=""><%= @event.date.to_formatted_s(:long_ordinal) %></div>
        </div>
        <div class="py-16">
          <div class="font-extrabold">Location</div>
          <div class=""><%= @event.location %></div>
        </div>
      </div>
    </div>
    <% if current_user&.id == @event.creator.id %>
      <div class="bg-yellow-300 p-8">
        <div class="font-extrabold text-2xl">Moderator Tools</div>
        <%= render partial: 'creator_tools', locals: {event: @event} %>
      </div>
    <% end %>
    <%= render_with_attendee_perms(@event) %>
  </div>
  <%= render 'event_bottom_bar' %>
</div>
