{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "Attach rdbg",
      "request": "attach",
      "debugPort": "4000"
    },
    {
      "type": "rdbg",
      "name": "RSpec - active spec file only (fails)",
      "request": "launch",
      "useBundler": false,
      "script": "rspec",
      "command": "bundle exec",
      "askParameters": false,
      "args": [
        "-I",
        "${workspaceRoot}",
        "${file}",
        "--format",
        "documentation",
        "--only-failures"
      ]
    },
    {
      "type": "rdbg",
      "name": "RSpec - active spec file only",
      "request": "launch",
      "useBundler": false,
      "script": "rspec",
      "command": "bundle exec",
      "askParameters": false,
      "args": ["-I", "${workspaceRoot}", "${file}", "--format", "documentation"]
    },
    {
      "type": "rdbg",
      "name": "Rspec - run all specs",
      "request": "launch",
      "useBundler": false,
      "script": "rspec",
      "command": "bundle exec",
      "askParameters": false,
      "args": ["--format", "documentation"]
    }
  ]
}
